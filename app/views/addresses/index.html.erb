<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
    </tr>
  </thead>

  <tbody>
    <% row_id = 0 %>
    <% @addresses.each do |address| %>
      <%= render :partial => "people/person_row", :locals => {:person => address.addressee, :row_id => row_id} %>
      <% row_id += 1 %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_person_path %>
