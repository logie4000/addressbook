<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Spouse</th>
      <th>Street</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Children</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <%= render :partial => "person_row", :locals => {:person => person} %>
    <% end %>
  </tbody>
</table>


